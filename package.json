{
  "name": "sodian",
  "version": "1.0.0",
  "description": "Cognitive AI system - Your second brain that actually works",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "eval:organization": "tsx src/evaluation/run-eval.ts --metric organization",
    "eval:synthesis": "tsx src/evaluation/run-eval.ts --metric synthesis",
    "eval:delegation": "tsx src/evaluation/run-eval.ts --metric delegation",
    "consolidate": "tsx src/jobs/nightly-consolidation.ts"
  },
  "keywords": [
    "ai",
    "langgraph",
    "knowledge-graph",
    "second-brain",
    "cognitive-system"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.3.0",
    "@langchain/langgraph": "^0.2.0",
    "@langchain/openai": "^0.3.0",
    "chromadb": "^1.8.0",
    "dotenv": "^16.4.0",
    "neo4j-driver": "^5.17.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
